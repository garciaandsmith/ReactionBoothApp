# Database
# Local dev (default): SQLite — zero config, just works
DATABASE_URL="file:./dev.db"
# Production: use PostgreSQL (Vercel Postgres, Neon, Supabase, etc.)
# DATABASE_URL="postgresql://user:password@host:5432/reactionbooth"

# NextAuth
NEXTAUTH_SECRET="change-me-to-a-random-secret-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Email (SMTP) — optional for local dev
# If not configured, emails are logged to the console
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="ReactionBooth <noreply@reactionbooth.app>"

# Vercel Blob Storage — optional for local dev
# If not set, uploads are stored in the local /uploads directory
BLOB_READ_WRITE_TOKEN=""

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
